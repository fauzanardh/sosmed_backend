{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "removeComments": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}
